{
  "name": "vertibit-cords",
  "version": "1.0.0",
  "description": "A JavaScript package for geospatial calculations using coordinates, including distance calculations and geofence area computations",
  "main": "index.js",
  "module": "index.js",
  "types": "index.d.ts",
  "scripts": {
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "example": "node examples/usage.js"
  },
  "keywords": [
    "geospatial",
    "coordinates",
    "distance",
    "geofence",
    "haversine",
    "gis",
    "mapping",
    "geography"
  ],
  "author": "Your Name <your.email@example.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/yourusername/vertibit-cords.git"
  },
  "bugs": {
    "url": "https://github.com/yourusername/vertibit-cords/issues"
  },
  "homepage": "https://github.com/yourusername/vertibit-cords#readme",
  "engines": {
    "node": ">=12.0.0"
  },
  "files": [
    "index.js",
    "index.d.ts",
    "README.md",
    "LICENSE",
    "examples/"
  ],
  "exports": {
    ".": {
      "import": "./index.js",
      "require": "./index.js",
      "types": "./index.d.ts"
    }
  },
  "devDependencies": {
    "jest": "^29.0.0"
  },
  "jest": {
    "testEnvironment": "node",
    "collectCoverageFrom": [
      "index.js",
      "!examples/**",
      "!**/node_modules/**"
    ],
    "coverageReporters": [
      "text",
      "lcov",
      "html"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 90,
        "functions": 100,
        "lines": 95,
        "statements": 95
      }
    }
  }
}
